<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.lifeistech.android.tictactoe.MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center">
        <TextView
                android:text="Player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textSize="30sp"
                android:textAlignment="center" android:id="@+id/playerText"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center"
        >
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton1" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton2" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton3" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center">
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton4" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton5" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton6" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="center">
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton7" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton8" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
            <ImageButton
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:id="@+id/imageButton9" android:layout_weight="1" android:scaleType="fitCenter"
                    android:onClick="tapMark"/>
        </LinearLayout>
        <Button
                android:text="Reset"
                android:layout_width="150dp"
                android:layout_height="60dp" android:id="@+id/button_reset" android:onClick="tapReset"/>
    </LinearLayout>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/winnerText" android:textSize="36sp"
            android:background="?android:attr/colorControlHighlight" android:gravity="center"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
</RelativeLayout>
